{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "pkg/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "fmt": {
      "cache": false,
      "persistent": false
    },
    "publish": {
      "dependsOn": ["build"],
      "cache": false
    }
  },
  "ui": "tui"
}
